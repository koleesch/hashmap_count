{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rust",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "cargo build",
            "stopOnEntry": false,
            "sourceLanguages": ["rust"],
            "env": {
                "PATH": "${env:PATH}:${env:HOME}/.cargo/bin"
            },
            "console": "integratedTerminal"
        }
    ]
}